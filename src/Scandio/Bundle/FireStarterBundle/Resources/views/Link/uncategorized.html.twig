{% extends 'ScandioFireStarterBundle::layout.html.twig' %}

{% block content -%}
    <h1>{{ 'Uncategorized Links' | trans }}</h1>

    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>{{ 'Link' | trans }}</th>
                        <th>{{ 'Tags' | trans }}</th>
                    </tr>
                </thead>

                <tbody>
                    {% for link in links %}
                        <tr>
                            <td><a href="{{ link.url }}" target="_blank">{{ link.title }}</a></td>
                            <td>
                                {{ link.tags | join(', ') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="2">{{ 'No Links available' | trans }}</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}