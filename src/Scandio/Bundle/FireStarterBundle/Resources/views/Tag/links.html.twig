<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <thead>
            <tr>
                <th>{{ 'Link' | trans }}</th>
                <th>{{ 'Tags' | trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for link in links %}
                <tr>
                    <td><a href="{{ link.url }}" target="_blank">{{ link.title }}</a></td>
                    <td>
                        {% for tag in link.tags %}
                            <a href="{{ path('tags_show', {'name': tag.name}) }}">{{ tag }}</a>|
                        {% else %}
                            {{ 'No tags associated' | trans }}
                        {% endfor %}
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="2">{{ 'No Links available' | trans }}</td></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>