<div id="add-tile-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">{{ 'Add a new tile' | trans }}</h4>
            </div>
            <div class="modal-body">
                <form id="add-tile-form" role="form" method="post" action="{{ path('tiles_add') }}" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title">{{ 'Title' | trans }}</label>
                        <input type="title" class="form-control" name="title" id="title" placeholder="{{ 'Add a tile name' | trans }}">
                    </div>

                    <div class="form-group">
                        <label for="description">{{ 'Description' | trans }}</label>
                        <textarea class="form-control" rows="5" id="description" name="description" placeholder="{{ 'Add a description' | trans }}"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="type">{{ 'Type' | trans }}</label>
                        <select class="form-control" id="type" name="type">
                            <option value="1" selected="selected">{{ 'Default' | trans }}</option>
                            <option value="2">{{ 'Widget' | trans }}</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="image">{{ 'Image' | trans }}</label>
                        <input type="file" name="image" id="image">
                        <p class="help-block">{{ 'Upload your tile image' | trans }}</p>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'Close' | trans }}</button>
                <button type="button" class="btn btn-primary" onclick="$('#add-tile-form').submit();">{{ 'Add' | trans }}</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
