{% extends 'ScandioFireStarterBundle::layout.html.twig' %}

{% block content -%}
<h1>
    {{ tile }}

    <button class="btn btn-primary btn-lg pull-right" data-toggle="modal" data-target="#add-link-modal-{{ tile.id }}">
        {{ 'Add link' | trans }}
    </button>
</h1>

{% include 'ScandioFireStarterBundle:Link:modal_add.html.twig' %}

<div class="row">
    <div class="col-lg-12">
        <p>{{ tile.description ? tile.description : ("No description available" | trans) }}</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <thead>
                <tr>
                    <th>{{ 'Name' | trans }}</th>
                    <th>{{ 'Url' | trans }}</th>
                    <th>{{ 'Action' | trans }}</th>
                </tr>
            </thead>

            <tbody>
            {% for link in tile.links %}
                <tr>
                    <td><a href="{{ link.url }}" target="_blank">{{ link.title }}</a></td>
                    <td>{{ link.url }}</td>
                    <td>
                        <a href="{{ path('links_remove', {'id': link.id}) }}" class="btn btn-danger">{{ 'delete' | trans }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>


{% endblock %}